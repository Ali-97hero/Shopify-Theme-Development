<h2 style="text-align: {{ section.settings.title_alignment }}">{{ section.settings.title }}</h2>
{% if settings.promotion_name.size > 0 %}
  <p>Active Promotion: {{ settings.promotion_name }}</p>
{% endif %}
<div style="display: flex; justify-content: center; gap: 20px;">
  {% for block in section.blocks %}
    {% if block.type == 'promotion' %}
      <div style="display: flex; flex-direction: column; gap: 10px; ">
        <h3 style="text-align: {{ block.settings.title_alignment_sec }} ">{{ block.settings.title }}</h3>
        {{ block.settings.image | image_url: width: 1500, height: 1500 | image_tag }}
      </div>
    {% endif %}
  {% endfor %}
</div>

{% schema %}
{
  "name": "Promotions Group",
  "tag": "section",
  "class": "my-wrapper-class",
  "settings": [
    {
      "type": "text",
      "label": "Title",
      "id": "title"
    },
    {
      "type": "select",
      "label": "Title Alignment",
      "id": "title_alignment",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "left"
    }
  ],
  "blocks": [
    {
      "type": "promotion",
      "name": "Promotion",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "select",
          "label": "Title Alignment",
          "id": "title_alignment_sec",
          "options": [
            {
              "value": "left",
              "label": "Left"
            },
            {
              "value": "center",
              "label": "Center"
            },
            {
              "value": "right",
              "label": "Right"
            }
          ],
          "default": "left"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Promotions Group"
    }
  ]
}
{% endschema %}
